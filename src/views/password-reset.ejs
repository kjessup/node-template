<%- include('partials/header', { }) %>

  <body class="signin">
    <main class="container">
      <h1 class="h3 col text-center pb-5 pt-1 text-white">Password Reset</h1>
      <div class="col text-center py-5">&nbsp;</div>
      <form method="POST" class="col signin" >
        <h5 class="h5 text-center pb-3">
          Create your new password.
        </h5>
        <div class="row">
          <span><%= msg %></span>
        </div>
        <div class="row">
          <span><%= user.username %></span>
          <input type="hidden" name="token" value="<%= token %>">
          <input type="hidden" name="username" value="<%= user.username %>" autocomplete="username" required>
        </div>
        <div class="row">
          <input id="password" type="password" class="col form-control" name="password" placeholder="Password" autocomplete="new-password" required>
        </div>
        <div class="row">
          <input id="confirm-password" type="password" class="col form-control" name="confirm-password" placeholder="Confirm Password" autocomplete="new-password" required>
        </div>
        <div class="row justify-content-between pt-4">
          <div class="col-3 align-middle">
          </div>
          <button type="submit" class="col-3 btn btn-primary p-0">Confirm</button>
        </div>
      </form>
    </main>
  </body>
  <%- include('partials/footer') %>