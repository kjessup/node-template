<%- include('partials/header', { }) %>

  <body class="signin">
    <main class="container">
      <h1 class="h3 col text-center pb-5 pt-1 text-white">node.template</h1>
      <div class="col text-center py-5">&nbsp;</div>
      <form method="POST" class="col signin" >
        <h5 class="h5 text-center pb-3">
          Please sign in
        </h5>
        <div class="row">
          <input id="username" type="text" class="col form-control" name="username" placeholder="Email address" autocomplete="username" required>
        </div>
        <div class="row">
          <input id="password" type="password" class="col form-control" name="password" placeholder="Password" autocomplete="password" required>
        </div>
        <div class="row justify-content-between">
          <div class="col-4 p-0">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                Remember me
              </label>
            </div>
          </div>
          <a class="col-4 p-0 text-end" href="/password-reset-request">Forgot my password</a>
        </div>
        <div class="row justify-content-between pt-4">
          <div class="col-3 align-middle">
          </div>
          <button type="submit" class="col-3 btn btn-primary p-0">Sign in</button>
        </div>
      </form>
    </main>
  </body>
  <%- include('partials/footer') %>